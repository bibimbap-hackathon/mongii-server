// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model node {
  node_id Int    @id @default(autoincrement())
  ip      String
  name    String @unique
  info    String
  edge    edge[]
  created_date       DateTime           @default(now())
  updated_date       DateTime           @updatedAt
}

model edge {
  edge_id Int      @id @default(autoincrement())
  ip      String
  name    String   @unique
  info    String
  password String
  node_id Int
  node    node     @relation(fields: [node_id], references: [node_id])
  module  module[]
  created_date       DateTime           @default(now())
  updated_date       DateTime           @updatedAt
}

model module {
  module_id Int      @id @default(autoincrement())
  ip        String
  name      String
  info      String
  priority  Int
  edge_id   Int
  edge      edge     @relation(fields: [edge_id], references: [edge_id])
  script    script[]
  created_date       DateTime           @default(now())
  updated_date       DateTime           @updatedAt
}

model script {
  script_id Int    @id @default(autoincrement())
  name      String
  src       String
  env       String
  module_id Int
  module    module @relation(fields: [module_id], references: [module_id])
  created_date       DateTime           @default(now())
  updated_date       DateTime           @updatedAt
}

model dashboard {
  dashboard_id  Int     @id @default(autoincrement())
  name          String
  uid           String
  url           String
}

model panel {
  panel_id  Int     @id @default(autoincrement())
  uid       String
  x         Int
  y         Int
  z         Int
  h         Int
  mode      String
}

model task {
  task_id   Int     @id @default(autoincrement())
  info      String
  is_completed  Boolean
  created_date       DateTime           @default(now())
  updated_date       DateTime           @updatedAt
}